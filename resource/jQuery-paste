<script type="text/javascript" >
let trigger=null;
function f2() {
	let reqt=$('#txt').val();
	if(reqt.length > 5 ) {
		window.alert("Sending what you said to google...");
		window.location.href="https://www.google.co.uk/q="+ encodeURIComponent( reqt );
	}
	return false;
}

function f3(e) {
	if(e.which ==13 || e.which==9 || e.which==32) {
		window.clearTimeout(trigger);
		f2();
	}
	if(trigger) {
		window.clearTimeout(trigger);
	}
	trigger=window.setTimeout(f2, 300 );
}

function f1() {
	$('#txt').on('keypress', f3);
	$('#txt').on('blur', f2 );
	$('#txt').on('paste', f2);
};

$('body').ready(f1);
</script><script type="text/javascript" src="/asset/jquery-validate.min.js" ></script>
